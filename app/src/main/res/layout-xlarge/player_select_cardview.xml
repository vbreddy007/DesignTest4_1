<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    card:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="2dp"
    android:id="@+id/player_select_cardview"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/player_team_icon"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_name"
            android:text="PLyaer one"
            android:layout_toEndOf="@+id/player_team_icon"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_team"
            android:text="player team"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/player_name"
            android:layout_margin="5dp"

        />

        <CheckBox
       android:id="@+id/check_box"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
            android:background="@color/button_color"


            android:layout_marginEnd="37dp"
            android:layout_alignBaseline="@+id/player_points"
            android:layout_alignBottom="@+id/player_points"
            android:layout_toStartOf="@+id/player_points" />

        <TextView
            android:text="PC"
            android:id="@+id/playercate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_points"
            android:layout_toStartOf="@+id/player_points"
            android:layout_marginEnd="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_points"
            android:text="player points"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/player_team"
            android:layout_toEndOf="@+id/player_team"
            android:layout_marginStart="35dp" />

        <TextView

            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/playerid"
            tools:text="PlayerID"
            android:layout_alignBaseline="@+id/playercate"
            android:layout_alignBottom="@+id/playercate"
            android:layout_toEndOf="@+id/player_points"
            android:layout_marginStart="25dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>